<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="abcPlugin" name="Create Runnable Jar for Project abcPlugin">
	
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="abcPlugin">
    	<mkdir dir="jars" />
        <jar destfile="./jars/abcPlugin.jar" filesetmanifest="mergewithoutmain">
            <fileset dir="bin">
            	<exclude name="**/test/**" />
            	<exclude name="*/test/*.class" />
            	<exclude name="**/*.jpg" />
            	<include name="**/*.class" />
            	<include name="**/*.js" />
            	<include name="**/*.txt" />
            	<include name="plugin.properties" />
            </fileset>
        </jar>
    </target>
</project>
